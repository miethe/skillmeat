# SkillMeat API Configuration
# Copy this file to .env and update with your settings

# =============================================================================
# Environment
# =============================================================================
SKILLMEAT_ENV=development  # development, production, or testing

# =============================================================================
# Server Configuration
# =============================================================================
SKILLMEAT_HOST=127.0.0.1
SKILLMEAT_PORT=8000
SKILLMEAT_RELOAD=true  # Enable auto-reload in development
SKILLMEAT_WORKERS=1

# =============================================================================
# API Configuration
# =============================================================================
SKILLMEAT_API_VERSION=v1
SKILLMEAT_API_TITLE="SkillMeat API"
SKILLMEAT_API_DESCRIPTION="REST API for SkillMeat collection manager"

# =============================================================================
# CORS Configuration
# =============================================================================
SKILLMEAT_CORS_ENABLED=true
SKILLMEAT_CORS_ORIGINS=["*"]
SKILLMEAT_CORS_ALLOW_CREDENTIALS=true
SKILLMEAT_CORS_ALLOW_METHODS=["*"]
SKILLMEAT_CORS_ALLOW_HEADERS=["*"]

# =============================================================================
# Logging Configuration
# =============================================================================
SKILLMEAT_LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
SKILLMEAT_LOG_FORMAT=text  # json or text

# =============================================================================
# Collection Configuration
# =============================================================================
# Override default collection directory (~/.skillmeat/collections)
# SKILLMEAT_COLLECTION_DIR=/path/to/custom/collection

# =============================================================================
# Security Configuration
# =============================================================================
# API Key Authentication (optional)
SKILLMEAT_API_KEY_ENABLED=false
# SKILLMEAT_API_KEY=your-secret-api-key-here

# Bearer Token Authentication (optional)
SKILLMEAT_AUTH_ENABLED=false

# =============================================================================
# Rate Limiting
# =============================================================================
SKILLMEAT_RATE_LIMIT_ENABLED=false
SKILLMEAT_RATE_LIMIT_REQUESTS=100  # Max requests per minute

# =============================================================================
# Discovery Feature Flags
# =============================================================================
# Enable/disable artifact auto-discovery feature
SKILLMEAT_ENABLE_AUTO_DISCOVERY=true

# Enable/disable automatic GitHub metadata population
SKILLMEAT_ENABLE_AUTO_POPULATION=true

# Cache TTL for discovery metadata in seconds (default: 3600 = 1 hour)
SKILLMEAT_DISCOVERY_CACHE_TTL=3600

# GitHub Personal Access Token
# Provides higher rate limits (5000/hr vs 60/hr unauthenticated)
# Generate at: https://github.com/settings/tokens
# Requires: public_repo scope for public repositories
SKILLMEAT_GITHUB_TOKEN=***REMOVED***
