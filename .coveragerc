[run]
source = skillmeat
omit =
    */tests/*
    */test_*.py
    */__pycache__/*
    */site-packages/*
    */venv/*
    */virtualenv/*
    */.venv/*
    */dist/*
    */build/*
    */eggs/*
    */.eggs/*
    */.tox/*
    */node_modules/*
    */skillmeat/web/*
    # Exclude demo and example files
    */demo_*.py
    */example_*.py

[report]
precision = 2
show_missing = True
skip_covered = False
sort = Cover
exclude_lines =
    # Have to re-enable the standard pragma
    pragma: no cover
    # Don't complain about missing debug-only code
    def __repr__
    def __str__
    # Don't complain if tests don't hit defensive assertion code
    raise AssertionError
    raise NotImplementedError
    # Don't complain if non-runnable code isn't run
    if __name__ == .__main__.:
    if TYPE_CHECKING:
    if typing.TYPE_CHECKING:
    # Don't complain about abstract methods
    @abstractmethod
    @abc.abstractmethod
    # Don't complain about protocol methods
    @typing.overload
    @overload
    # Don't complain about ellipsis in stub files
    \.\.\.

[html]
directory = htmlcov
title = SkillMeat Test Coverage Report

[xml]
output = coverage.xml

[json]
output = coverage.json
pretty_print = true

# Coverage thresholds (informational, enforced in CI)
# Target: 75% overall
# Critical paths: 100% (auth, publishing, MCP management)
